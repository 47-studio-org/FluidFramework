{
  "name": "monorepo",
  "version": "0.14.0",
  "private": true,
  "homepage": "https://fluidframework.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/FluidFramework.git",
    "directory": ""
  },
  "license": "MIT",
  "author": "Microsoft and contributors",
  "workspaces": {
    "packages": [
      "packages/*/*",
      "examples/**",
      "experimental/*/*",
      "server/routerlicious/packages/gitresources",
      "server/routerlicious/packages/protocol-base",
      "server/tinylicious",
      "server/azure-local-service",
      "common/**",
      "tools/**"
    ],
    "nohoist": [
      "**/@fluidframework/mocha-test-setup",
      "**/@types/expect-puppeteer",
      "**/@types/jwt-decode",
      "**/commander"
    ]
  },
  "scripts": {
    "build": "pnpm run policy-check && pnpm run layer-check && pnpm run build:genver && pnpm run build:compile && pnpm run lint",
    "build:ci": "pnpm run build:genver && pnpm -r build:compile --workspace-concurrency 8",
    "build:compile": "pnpm -r build:compile --workspace-concurrency 8",
    "build:docs": "pnpm -r build:docs --workspace-concurrency 8",
    "build:fast": "fluid-build --root .",
    "build:full": "pnpm run build:genver && pnpm run build:full:compile && pnpm run lint",
    "build:full:compile": "pnpm -r build:full:compile --workspace-concurrency 8",
    "build:gendocs": "copyfiles server/routerlicious/_api-extractor-temp/** ./_api-extractor-temp/doc-models/ -f -V && cd docs && pnpm run build",
    "build:genver": "pnpm -r build:genver --workspace-concurrency 8",
    "bump-version": "fluid-bump-version --root .",
    "bundle-analysis:collect": "pnpm run webpack:profile && fluid-collect-bundle-analyses",
    "bundle-analysis:run": "fluid-run-bundle-analyses",
    "ci:build": "pnpm run build:genver && pnpm -r build:compile --workspace-concurrency 8",
    "ci:build:docs": "pnpm -r ci:build:docs --workspace-concurrency 8",
    "ci:test": "pnpm run test:report ; t1=$? ; pnpm run test:copyresults ; exit $t1",
    "ci:test:coverage": "pnpm run test:coverage ; t1=$? ; pnpm run test:copyresults ; exit $t1",
    "clean": "pnpm -r clean --workspace-concurrency 8 && pnpm run clean:docs && pnpm run clean:nyc",
    "clean:docs": "rimraf **/_api-extractor-temp docs/api/*/**",
    "clean:nyc": "rimraf nyc/**",
    "clean:r11s": "cd server/routerlicious && pnpm run clean",
    "dedup": "yarn-deduplicate",
    "install-strict": "npx midgard-yarn install",
    "layer-check": "fluid-layer-check --info tools/build-tools/data/layerInfo.json",
    "lerna": "lerna",
    "lint": "pnpm -r lint --no-sort --workspace-concurrency 8 -- -- -- --color",
    "lint:fix": "pnpm -r lint:fix --no-sort --workspace-concurrency 8 -- -- -- --color",
    "policy-check": "fluid-repo-policy-check",
    "policy-check:fix": "fluid-repo-policy-check -r",
    "post-lerna-install:default": "[ -f package-lock.json ] && mv package-lock.json lerna-package-lock.json; [ -f package-lock.json.bak ] && mv package-lock.json.bak package-lock.json; exit 0",
    "post-lerna-install:win32": "if exist package-lock.json move package-lock.json lerna-package-lock.json && if exist package-lock.json.bak move package-lock.json.bak package-lock.json",
    "postinstall:lerna": "run-script-os",
    "postinstall:lerna:default": "pnpm run pre-lerna-install:default && { lerna bootstrap --strict --hoist;t1=$?;pnpm run post-lerna-install:default;exit $t1;}",
    "postinstall:lerna:win32": "pnpm run pre-lerna-install:win32 && (lerna bootstrap --strict --hoist & pnpm run post-lerna-install:win32)",
    "pre-lerna-install:default": "[ -f package-lock.json ] && mv package-lock.json package-lock.json.bak; [ -f lerna-package-lock.json ] && mv lerna-package-lock.json package-lock.json; exit 0",
    "pre-lerna-install:win32": "if exist package-lock.json move package-lock.json package-lock.json.bak && if exist lerna-package-lock.json move lerna-package-lock.json package-lock.json",
    "restart": "cd server/routerlicious && pnpm run restart",
    "start:docker": "docker-compose -f server/docker-compose.yml up",
    "stop:docker": "docker-compose -f server/docker-compose.yml down",
    "stop:docker:full": "docker-compose -f server/docker-compose.yml down && docker volume prune --force",
    "test": "pnpm run test:mocha && pnpm run test:jest && pnpm run test:types && pnpm run test:realsvc",
    "test:bail": "pnpm run test:mocha:bail && pnpm run test:jest:bail",
    "test:copyresults": "copyfiles --exclude \"**/node_modules/**\" \"**/nyc/**\" nyc",
    "test:coverage": "c8 pnpm run test:report",
    "test:fromroot": "mocha \"packages/**/dist/test/**/*.spec.js\" --exit",
    "test:jest": "assign-test-ports && pnpm -r test:jest --concurrency 4 --workspace-concurrency 8 --no-bail --no-sort -- -- --color",
    "test:jest:bail": "assign-test-ports && pnpm -r test:jest --concurrency 4 --workspace-concurrency 8",
    "test:jest:report": "assign-test-ports && pnpm -r test:jest --concurrency 4 --workspace-concurrency 8 --no-bail --no-sort -- -- --ci --reporters=default --reporters=jest-junit",
    "test:mocha": "pnpm -r test:mocha --workspace-concurrency 8 --no-bail --no-sort -- -- --color",
    "test:mocha:bail": "pnpm -r test:mocha --workspace-concurrency 8",
    "test:mocha:report": "pnpm -r test:mocha --workspace-concurrency 8 --no-bail --no-sort -- -- --timeout 4s --reporter xunit --reporter-option output=nyc/mocha-junit-report.xml",
    "test:realsvc": "pnpm -r test:realsvc --workspace-concurrency 8 --no-bail --no-sort",
    "test:realsvc:report": "pnpm -r test:realsvc:report --workspace-concurrency 8 --no-bail --no-sort",
    "test:report": "pnpm run test:mocha:report && pnpm run test:jest:report && pnpm run test:realsvc:report",
    "test:types": "pnpm -r test:types --workspace-concurrency 8 --no-bail --no-sort",
    "tsc": "pnpm -r tsc --workspace-concurrency 8",
    "tsc:fast": "fluid-build  --root . -s tsc",
    "tsfmt": "pnpm -r tsfmt:fix --no-sort --workspace-concurrency 8 --no-bail",
    "tsfmt:fix": "pnpm -r tsfmt:fix --no-sort --workspace-concurrency 8 --no-bail",
    "typetests:gen": "fluid-type-validator -m packages -v",
    "typetests:prepare": "pnpm run typetests:gen -- -p",
    "watch": "concurrently \"pnpm run watch:tsc\" \"pnpm run watch:esnext\" \"pnpm run watch:webpack\"",
    "watch:esnext": "pnpm -r --parallel build:esnext -- -- --watch",
    "watch:tsc": "pnpm -r --parallel tsc -- -- --watch",
    "watch:webpack": "pnpm -r --parallel webpack -- -- --watch",
    "webpack": "pnpm -r --no-sort webpack --workspace-concurrency 8",
    "webpack:profile": "pnpm -r --no-sort webpack:profile --workspace-concurrency 8",
    "lage": "lage"
  },
  "c8": {
    "all": true,
    "cache-dir": "nyc/.cache",
    "exclude": [
      "**/*.d.ts",
      "**/src/test/**/*.ts",
      "**/dist/test/**/*.js",
      "experimental/examples/**",
      "experimental/PropertyDDS/examples/**",
      "**/*.bundle.js"
    ],
    "exclude-after-remap": false,
    "extension": [
      ".ts",
      ".tsx",
      ".js",
      ".jsx"
    ],
    "include": [
      "packages/**/src/**/*.ts",
      "packages/**/dist/**/*.js",
      "experimental/**/src/**/*.ts",
      "experimental/**/dist/**/*.js"
    ],
    "report-dir": "nyc/report",
    "reporter": [
      "cobertura",
      "html",
      "text"
    ],
    "temp-directory": "nyc/.nyc_output"
  },
  "devDependencies": {
    "@fluidframework/build-tools": "^0.2.66793",
    "@fluidframework/test-tools": "^0.2.3074",
    "@microsoft/api-documenter": "^7.17.9",
    "@microsoft/api-extractor": "^7.22.2",
    "@nrwl/cli": "~13.8.0",
    "@nrwl/nx-cloud": "^13.3.1",
    "@nrwl/tao": "~13.8.0",
    "@nrwl/workspace": "~13.8.0",
    "c8": "^7.7.1",
    "concurrently": "^6.2.0",
    "copyfiles": "^2.1.0",
    "eslint": "~8.6.0",
    "lage": "0.41.0",
    "lerna": "^4.0.0",
    "nx": "~13.8.0",
    "rimraf": "^2.6.2",
    "run-script-os": "^1.1.6",
    "turbo": "^1.2.4",
    "typescript": "~4.5.5",
    "yarn-deduplicate": "^4.0.0"
  },
  "fluidBuild": {
    "repoPackages": {
      "build": "common/build",
      "common-def": "common/lib/common-definitions",
      "common-utils": "common/lib/common-utils",
      "core-interfaces": "common/lib/core-interfaces",
      "protocol-def": "common/lib/protocol-definitions",
      "driver-def": "common/lib/driver-definitions",
      "container-def": "common/lib/container-definitions",
      "azure": "azure",
      "server": "server/routerlicious",
      "client": {
        "directory": "",
        "ignoredDirs": []
      },
      "tools": [
        "tools/benchmark",
        "server/tinylicious",
        "server/azure-local-service"
      ],
      "services": {
        "directory": "server",
        "ignoredDirs": [
          "routerlicious",
          "tinylicious",
          "azure-local-service"
        ]
      }
    }
  }
}
